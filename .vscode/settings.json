{
    "idf.espIdfPath": "${env:IDF_PATH}",
    "idf.toolsPath": "${env:HOME}/.espressif",
    "idf.port": "/dev/ttyUSB0",
    "idf.flashType": "UART",
    "idf.adapterTargetName": "esp32p4",

    "files.associations": {
        "*.h": "c",
        "*.c": "c",
        "sdkconfig": "kconfig",
        "sdkconfig.defaults": "kconfig",
        "Kconfig": "kconfig",
        "Kconfig.projbuild": "kconfig"
    },

    "C_Cpp.default.configurationProvider": "espressif.esp-idf-extension",

    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,

    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,

    "cSpell.words": [
        "LVGL",
        "ESP32",
        "FreeRTOS",
        "PSRAM",
        "SPIFFS",
        "MIPI",
        "sdmmc",
        "fatfs",
        "terrarium",
        "tamagotchi"
    ],

    "search.exclude": {
        "**/build": true,
        "**/managed_components": true,
        "**/.git": true
    }
}
