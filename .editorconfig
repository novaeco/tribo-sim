# EditorConfig - https://editorconfig.org
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# C/C++ source files
[*.{c,h,cpp,hpp}]
indent_style = space
indent_size = 4

# CMake files
[CMakeLists.txt]
indent_style = space
indent_size = 4

[*.cmake]
indent_style = space
indent_size = 4

# Kconfig files (ESP-IDF configuration)
[Kconfig*]
indent_style = tab
tab_width = 4

# Python files (ESP-IDF tools)
[*.py]
indent_style = space
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# CSV files (partitions.csv)
[*.csv]
insert_final_newline = false

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4

# Makefiles
[Makefile]
indent_style = tab
