menu "Audio Configuration"

    config AUDIO_BUZZER_GPIO
        int "Buzzer GPIO pin"
        default 41
        range 0 48
        help
            GPIO pin connected to the buzzer/speaker.
            Default is GPIO 41 for ESP32-P4.

    config AUDIO_ENABLED_DEFAULT
        bool "Enable audio by default"
        default y
        help
            Whether audio should be enabled at startup.

    config AUDIO_DEFAULT_VOLUME
        int "Default volume (0-100)"
        default 50
        range 0 100
        help
            Default audio volume at startup.

endmenu
