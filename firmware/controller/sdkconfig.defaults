# Flash / PSRAM OPI Octal @ 80 MHz
CONFIG_ESPTOOLPY_FLASHSIZE_32MB=y
CONFIG_ESPTOOLPY_FLASHMODE_OPI=y
CONFIG_ESPTOOLPY_FLASHFREQ_80M=y
CONFIG_SPIRAM=y
CONFIG_SPIRAM_MODE_OCT=y
CONFIG_SPIRAM_TYPE_OPI=y
CONFIG_SPIRAM_SPEED_80M=y
# USB CDC console
CONFIG_ESP_CONSOLE_USB_CDC=y
CONFIG_TINYUSB_CDC_ENABLED=y
# Dual OTA
CONFIG_PARTITION_TABLE_TWO_OTA=y
CONFIG_BOOTLOADER_APP_ROLLBACK_ENABLE=y
# OTA signature verification
CONFIG_TRIBO_OTA_PUBKEY_BASE64="BwfSzErF6+bjU+JAcL/uyPFLuVvQIIlJS8IMLiR5aEA="
# Networking essentials
CONFIG_LWIP_LOCAL_HOSTNAME="terrarium-s3"
CONFIG_ESP_HTTPS_SERVER_ENABLE=y
CONFIG_ESP_TLS_CLIENT_SESSION_TICKETS=y
CONFIG_NVS_ENCRYPTION=y
CONFIG_NVS_ENCRYPTION_PARTITION="nvs_keys"
# Dome bus concurrency
CONFIG_DOME_BUS_MUTEX_TIMEOUT_MS=50
